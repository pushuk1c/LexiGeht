<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LexiGeht.Views.Main.QuizPage">
    
    
   
        <Grid RowDefinitions="*"
               BackgroundColor="WhiteSmoke">
           
            <Frame Grid.Row="0" HasShadow="True" CornerRadius="12" Margin="10,10,10,10">
                <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="0">

                    <Grid Grid.Row="0" Margin="10">
                        <Image Source="{Binding Quiz.ImagePathSource}" 
                            Aspect="AspectFit"
                            VerticalOptions="Center" 
                            HorizontalOptions="Center"
                            WidthRequest="200"/>
                    </Grid>

                    <Label Grid.Row="1"
                        Text="{Binding Quiz.Title}"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center" 
                        FontSize="26" 
                        FontFamily="RobotoRegular"
                        Margin="10,10"/>

                    <Label Grid.Row="2"
                        Text="{Binding Quiz.Description}"
                        LineBreakMode="WordWrap"
                        MaxLines="0"               
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        VerticalOptions="Start" 
                        FontSize="20" 
                        FontFamily="RobotoRegular"
                        Margin="10,5"/>

                    <Button Grid.Row="3" Text="Start" Command="{Binding StartQuizCommand}"
                        Margin="5,5,5,5"
                        TextColor="White"
                        BorderWidth="1"
                        BorderColor="#5e17eb"
                        BackgroundColor="#5e17eb"
                        CornerRadius="30"
                        HorizontalOptions="Center"
                        VerticalOptions="End"
                        Padding="20,5"
                        FontSize="18"
                        FontFamily="RobotoRegular"
                        WidthRequest="300"/>

                </Grid>
            </Frame>

    </Grid>
        
    
    
    
</ContentPage>