<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LexiGeht.Views.Auth.SignupPage">

    <Grid RowDefinitions="Auto,Auto,*">

        <VerticalStackLayout Grid.Row="1">
            <Label Text="WILLKOMMEN" Margin="0,20,0,0"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                FontFamily="RobotoExtraBold"
                FontSize="30"
                FontAttributes="Bold"/>
            
            <Label Text="bei der"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                FontFamily="RobotoExtraBold"
                FontSize="28"
                FontAttributes="Bold"/>

            <Image Source="logo.png" Margin="0,0,0,10"
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"
                   WidthRequest="240"/>
                       
        </VerticalStackLayout>

        <Border Grid.Row="2" Stroke="Transparent" Background="#5e17eb">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30,30,0,0" />
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="10"  
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="StartAndExpand">

                <Grid ColumnDefinitions="*,*" Margin="50,20,50,10">

                    <Label Grid.Column="0" Text="Anmelden" 
                        HorizontalOptions="Start"
                        TextColor="White" 
                        FontFamily="RobotoExtraBold"
                        FontSize="30" 
                        FontAttributes="Bold"
                        />

                    <Image Grid.Column="1" Source="person_add.png" 
                        HorizontalOptions="End" 
                        VerticalOptions="Center"
                        MaximumWidthRequest="32"
                        />
                </Grid>

                <Label Grid.Column="0" Margin="60,0"
                    Text="Benutzername" 
                    HorizontalOptions="Start"
                    TextColor="White" 
                    FontFamily="RobotoRegular"
                    FontSize="16" 
                    />

                <Border Background="#ebe1ff"
                    Stroke="Transparent"
                    Margin="40,0"
                    StrokeShape="RoundRectangle 30">

                    <Grid Padding="16,0">
                        <Entry Text="{Binding Username}"
                            FontSize="20" 
                            TextColor="#5e17eb"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="Transparent"
                               />
                    </Grid>                    
                </Border>

                <Label Grid.Column="0" Margin="60,0"
                    Text="Email" 
                    HorizontalOptions="Start"
                    TextColor="White" 
                    FontFamily="RobotoRegular"
                    FontSize="16" 
                    />

                <Border Background="#ebe1ff"
                    Stroke="Transparent"
                    Margin="40,0"
                    StrokeShape="RoundRectangle 30">

                    <Grid Padding="16,0">
                        <Entry Text="{Binding Email}"
                            FontSize="20" 
                            TextColor="#5e17eb"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="Transparent"
                            />
                    </Grid>
                </Border>

                <Label Grid.Column="0" Margin="60,0"
                    Text="Kennwort" 
                    HorizontalOptions="Start"
                    TextColor="White" 
                    FontFamily="RobotoRegular"
                    FontSize="16" 
                    />

                <Border Background="#ebe1ff"
                    Stroke="Transparent"
                    Margin="40,0"
                    StrokeShape="RoundRectangle 30">

                    <Grid Padding="16,0">
                        <Entry Text="{Binding Password}"
                            FontSize="20" 
                            IsPassword="True"
                            TextColor="#5e17eb"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="Transparent"
                                />
                    </Grid>
                </Border>

                <Button Text="Anmelden" Command="{Binding SignUpCommand}"
                        Margin="0,10,0,20"
                        TextColor="White"
                        BorderWidth="2"
                        BorderColor="White"
                        BackgroundColor="Transparent"
                        CornerRadius="30"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="50,5"
                        FontSize="18"
                        FontFamily="RobotoRegular"/>
                


            </VerticalStackLayout>

        </Border>




    </Grid>
    
    
    
    
    
    
</ContentPage>