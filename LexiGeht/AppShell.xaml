<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LexiGeht.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LexiGeht.Views.Main"
    Title="LexiGeht"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="True"
    Shell.TabBarBackgroundColor="#5e17eb"
    Shell.TabBarTitleColor="White"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarDisabledColor="#666666"    
    Shell.TabBarUnselectedColor="#B0B0B0">
        
    <TabBar>

        <Tab Title="Home" Icon="home_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Achievements" Icon="medal_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:AchievementsPage}" />
        </Tab>

        <Tab Title="Settings" Icon="settings_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>

        <Tab Title="Profile" Icon="profile_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}"  />
        </Tab>


    </TabBar>

</Shell>
